@model List<Movie>

@{
    ViewData["Title"] = "Movies";
    Layout = "_Layout";
}

<h2 class="h2 mb-3">Movies</h2>

@Html.ActionLink("New Movie", "New", null, htmlAttributes: new { @class = "btn btn-primary px-3 text-uppercase font-weight-bold mb-3" })

@if (Model.Count == 0)
{
    <p class="text-muted fs-4">We don't have any movies yet.</p>
    return;
}

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>
                <a class="text-warning" asp-area="" asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id">
                    @movie.Name
                </a>
            </td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
    </tbody>
</table>